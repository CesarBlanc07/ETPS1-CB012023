<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtValores"
        android:layout_width="342dp"
        android:layout_height="77dp"
        android:ems="10"
        android:hint="Ingrese 10 valores separados por coma"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.126" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="174dp"
        android:layout_height="61dp"
        android:layout_marginTop="32dp"
        android:text="Calcular"
        app:layout_constraintEnd_toEndOf="@+id/edtValores"
        app:layout_constraintStart_toStartOf="@+id/edtValores"
        app:layout_constraintTop_toBottomOf="@+id/edtValores" />

    <TextView
        android:id="@+id/tvNegativos"
        android:layout_width="258dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/btnCalcular"
        app:layout_constraintStart_toStartOf="@+id/btnCalcular"
        app:layout_constraintTop_toBottomOf="@+id/btnCalcular" />

    <TextView
        android:id="@+id/tvPositivos"
        android:layout_width="263dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/tvNegativos"
        app:layout_constraintStart_toStartOf="@+id/tvNegativos"
        app:layout_constraintTop_toBottomOf="@+id/tvNegativos" />

    <TextView
        android:id="@+id/tvMultiplo"
        android:layout_width="260dp"
        android:layout_height="54dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/tvPositivos"
        app:layout_constraintStart_toStartOf="@+id/tvPositivos"
        app:layout_constraintTop_toBottomOf="@+id/tvPositivos" />

    <TextView
        android:id="@+id/tvPares"
        android:layout_width="260dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/tvMultiplo"
        app:layout_constraintStart_toStartOf="@+id/tvMultiplo"
        app:layout_constraintTop_toBottomOf="@+id/tvMultiplo" />
</androidx.constraintlayout.widget.ConstraintLayout>