<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="348dp"
        android:layout_height="687dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.226">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtNum1"
                android:layout_width="295dp"
                android:layout_height="48dp"
                android:ems="10"
                android:hint="Numero 1"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtNum2"
                android:layout_width="297dp"
                android:layout_height="53dp"
                android:ems="10"
                android:hint="Numero 2"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtNum3"
                android:layout_width="291dp"
                android:layout_height="48dp"
                android:ems="10"
                android:hint="Numero 3"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtNum4"
                android:layout_width="293dp"
                android:layout_height="54dp"
                android:ems="10"
                android:hint="Numero 4"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtNum5"
                android:layout_width="294dp"
                android:layout_height="61dp"
                android:ems="10"
                android:hint="Numero 5"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtNum6"
                android:layout_width="297dp"
                android:layout_height="56dp"
                android:ems="10"
                android:hint="Numero 6"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtNum7"
                android:layout_width="295dp"
                android:layout_height="53dp"
                android:ems="10"
                android:hint="Numero 7"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtNum8"
                android:layout_width="291dp"
                android:layout_height="61dp"
                android:ems="10"
                android:hint="Numero 8"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtNum9"
                android:layout_width="289dp"
                android:layout_height="57dp"
                android:ems="10"
                android:hint="Numero 9"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtNum10"
                android:layout_width="282dp"
                android:layout_height="54dp"
                android:ems="10"
                android:hint="Numero 10"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btnCalcular"
                android:layout_width="165dp"
                android:layout_height="49dp"
                android:text="Calcular" />

            <TextView
                android:id="@+id/tvResultado"
                android:layout_width="312dp"
                android:layout_height="44dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>